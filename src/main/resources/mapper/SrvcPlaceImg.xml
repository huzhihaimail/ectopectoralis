<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 配置dao接口路径-->
<mapper namespace="cn.com.njdhy.muscle.biceps.dao.srvc.SrvcPlaceImgDao">

    <!-- type配置model层实体类名-->
    <resultMap id="SrvcPlaceImgMap" type="SrvcPlaceImg">
        <!-- 配置实体和数据库列的对应关系，property：实体属性名；column：数据库表列名；-->
        <result property="id" column="id"></result>
        <result property="placeId" column="place_id"></result>
        <result property="imageUrl" column="image_url"></result>
        <result property="imageExplain" column="image_explain"></result>
        <result property="deleteFlag" column="delete_flag"></result>
        <result property="createDate" column="create_date"></result>
        <result property="updateDate" column="update_date"></result>
    </resultMap>

    <!-- 配置表名 -->
    <sql id="tableName">
        srvc_place_img
    </sql>

    <!-- for insert columns -->
    <sql id="columns">
        id, place_id, image_url, image_explain, create_date, update_date, delete_flag
    </sql>

    <!-- for insert value -->
    <sql id="values">
        #{id},#{placeId}, #{imageUrl}, #{imageExplain}, NOW(), NOW(), 0
    </sql>

    <!-- for update set -->
    <sql id="updates">
        image_url=#{imageUrl},image_explain=#{imageExplain}, update_date=NOW(), delete_flag=#{deleteFlag}
    </sql>


    <!-- 根据ID查询-->
    <select id="queryById" resultMap="SrvcPlaceImgMap" parameterType="String">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableName"/>
        WHERE 1 = 1
        AND id=#{id}
    </select>

    <!-- 批量删除-->
    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM
        <include refid="tableName"/>
        WHERE 1=1
        AND id IN
        <foreach item="id" index="index" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 新建  useGeneratedKeys="true" 用于返回新增后的id值-->
    <insert id="insert" parameterType="SrvcPlaceImg" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tableName"/>
        (<include refid="columns"/>)
        VALUES
        (<include refid="values"/>)
    </insert>

    <!-- 修改 -->
    <update id="update" parameterType="SrvcPlaceImg">
        UPDATE
        <include refid="tableName"/>
        SET
        <include refid="updates"/>
        WHERE 1=1
        AND id = #{id}
    </update>

</mapper>

