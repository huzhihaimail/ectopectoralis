<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 配置dao接口路径-->
<mapper namespace="cn.com.njdhy.muscle.biceps.dao.srvc.SrvcCompanyDescSubDao">

    <!-- type配置model层实体类名-->
    <resultMap id="SrvcCompanyDescSubMap" type="SrvcCompanyDescSub">
        <!-- 配置实体和数据库列的对应关系，property：实体属性名；column：数据库表列名；-->
        <result property="id" column="id"></result>
        <result property="title" column="title"></result>
        <result property="content" column="content"></result>
        <result property="imageUrl" column="image_url"></result>
        <result property="author" column="author"></result>
        <result property="companyDescId" column="company_desc_id"></result>
        <result property="deleteFlag" column="delete_flag"></result>
        <result property="createDate" column="create_date"></result>
        <result property="updateDate" column="update_date"></result>
    </resultMap>

    <!-- 配置表名 -->
    <sql id="tableName">
        srvc_companydesc_sub
    </sql>

    <!-- for insert columns -->
    <sql id="columns">
        id, title, content,image_url,author,company_desc_idcreate_date, update_date, delete_flag
    </sql>

    <!-- for insert value -->
    <sql id="values">
        #{id}, #{title},#{content}, #{imgUrl}, #{author},#{companyDescId}, NOW(),#{updateDate}, 0
    </sql>

    <!-- for update set -->
    <sql id="updates">
        title=#{title},content=#{content} img_url=#{imgUrl}, author=#{author},company_desc_id=#{companyDescId} update_date=NOW(), delete_flag=#{deleteFlag}
    </sql>

    <!-- 根据名称查询 -->
    <select id="queryByName" resultMap="SrvcCompanyDescSubMap" parameterType="String">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableName"/>
        t
        WHERE 1=1
        AND t.title=#{title}

    </select>

    <!-- 根据ID查询-->
    <select id="queryById" resultMap="SrvcCompanyDescSubMap" parameterType="String">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableName"/>
        WHERE 1 = 1
        AND id=#{id}
    </select>

    <!-- 批量删除-->
    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM
        <include refid="tableName"/>
        WHERE 1=1
        AND id IN
        <foreach item="id" index="index" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 新建  useGeneratedKeys="true" 用于返回新增后的id值-->
    <insert id="insert" parameterType="SrvcCompanyDescSub" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tableName"/>
        (<include refid="columns"/>)
        VALUES
        (<include refid="values"/>)
    </insert>

    <!-- 修改 -->
    <update id="update" parameterType="SrvcCompanyDescSub">
        UPDATE
        <include refid="tableName"/>
        SET
        <include refid="updates"/>
        WHERE 1=1
        AND id = #{id}
    </update>

    <!-- 根据条件查询 -->
    <select id="queryList" resultMap="SrvcCompanyDescSubMap" parameterType="map">

        SELECT
        <include refid="columns"/>
        FROM
        (
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableName"/>
        WHERE 1=1
        <if test="keyword!=null and keyword!=''">
            AND title LIKE CONCAT('%',#{keyword},'%')
        </if>
        ORDER BY
        create_date
        DESC
        ) t
    </select>


</mapper>

