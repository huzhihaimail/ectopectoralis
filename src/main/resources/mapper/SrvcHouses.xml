<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 配置dao接口路径-->
<mapper namespace="cn.com.njdhy.muscle.biceps.dao.srvc.SrvcHousesDao">

    <!-- type配置model层实体类名-->
    <resultMap id="SrvcHousesMap" type="SrvcHouses">
        <!-- 配置实体和数据库列的对应关系，property：实体属性名；column：数据库表列名；-->
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <result property="housesType" column="houses_type"></result>
        <result property="floorSpace" column="floor_space"></result>
        <result property="style" column="style"></result>
        <result property="area" column="area"></result>
        <result property="progressTitle" column="progress_title"></result>

        <result property="imageUrl" column="image_url"></result>

        <result property="deleteFlag" column="delete_flag"></result>
        <result property="createDate" column="create_date"></result>
        <result property="updateDate" column="update_date"></result>
    </resultMap>

    <!-- 配置表名 -->
    <sql id="tableName">
        srvc_houses
    </sql>

    <sql id="tableName2">
        srvc_houses_sub
    </sql>

    <!-- for insert columns -->
    <sql id="columns">
        id, `name`, houses_type, floor_space, style, area, create_date, update_date, delete_flag
    </sql>

    <!-- for insert value -->
    <sql id="values">
        #{id}, #{name}, #{housesType}, #{floorSpace}, #{style}, #{area}, NOW(),#{updateDate}, 0
    </sql>

    <!-- for update set -->
    <sql id="updates">
        `name`=#{name}, houses_type=#{housesType}, floor_space=#{floorSpace}, style=#{style}, area=#{area}, update_date=NOW(), delete_flag=#{deleteFlag}
    </sql>

    <!-- 根据名称查询 -->
    <select id="queryByName" resultMap="SrvcHousesMap" parameterType="String">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableName"/>
        t
        WHERE 1=1
        AND t.name=#{name}

    </select>

    <!-- 根据ID查询-->
    <select id="queryById" resultMap="SrvcHousesMap" parameterType="String">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableName"/>
        WHERE 1 = 1
        AND id=#{id}
    </select>

    <!-- 批量删除-->
    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM
        <include refid="tableName"/>
        WHERE 1=1
        AND id IN
        <foreach item="id" index="index" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 新建  useGeneratedKeys="true" 用于返回新增后的id值-->
    <insert id="insert" parameterType="SrvcHouses" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tableName"/>
        (<include refid="columns"/>)
        VALUES
        (<include refid="values"/>)
    </insert>

    <!-- 修改 -->
    <update id="update" parameterType="SrvcHouses">
        UPDATE
        <include refid="tableName"/>
        SET
        <include refid="updates"/>
        WHERE 1=1
        AND id = #{id}
    </update>

    <!-- 根据条件查询 -->
    <select id="queryList" resultMap="SrvcHousesMap" parameterType="map">

        SELECT
        <include refid="columns"/>
        FROM
        (
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableName"/>
        WHERE 1=1
        <if test="keyword!=null and keyword!=''">
            AND `name` LIKE CONCAT('%',#{keyword},'%')
        </if>
        ORDER BY
        create_date
        DESC
        ) t
    </select>

    <!--backend关联查询-->
    <select id="selectHousesList" resultMap="SrvcHousesMap" parameterType="map">
        SELECT
        h.*,
        s.id,s.image_url
        FROM
        <include refid="tableName"/> h
        LEFT JOIN
        <include refid="tableName2"/> s
        ON h.id = s.houses_id
        <where>
            AND h.delete_flag = 0
            <if test="keyword!=null and keyword!=''">
                AND h.name LIKE CONCAT('%',#{keyword},'%')
            </if>
        </where>
    </select>

    <!--api关联查询-->
    <select id="selectHousesInfo" resultMap="SrvcHousesMap" parameterType="Integer">
        SELECT
        h.*,
        s.id,s.image_url
        FROM
        <include refid="tableName"/> h
        LEFT JOIN
        <include refid="tableName2"/> s
        ON h.id = s.houses_id
        WHERE h.delete_flag = 0 AND h.progress_title =#{progressTitle}
    </select>

</mapper>

